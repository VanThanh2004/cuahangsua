@{
    ViewData["Title"] = "Đăng Nhập";
}

<h2>Đăng Nhập</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<!-- Tabs Chuyển Đổi -->
<ul class="nav nav-tabs" id="authTabs">
    <li class="nav-item">
        <a class="nav-link active" id="customer-tab" data-bs-toggle="tab" href="#customerLogin">Khách Hàng</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="admin-tab" data-bs-toggle="tab" href="#adminLogin">Admin</a>
    </li>
</ul>

<!-- Nội dung của Tabs -->
<div class="tab-content mt-3">
    <!-- Form Đăng Nhập Khách Hàng -->
    <div class="tab-pane fade show active" id="customerLogin">
        <form method="post" asp-controller="Account" asp-action="Login">
            <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng Nhập</button>
        </form>
    </div>

    <!-- Form Đăng Nhập Admin -->
    <div class="tab-pane fade" id="adminLogin">
        <form method="post" asp-controller="Admin" asp-action="Login">
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-danger w-100">Đăng Nhập Admin</button>
        </form>
    </div>
</div>
